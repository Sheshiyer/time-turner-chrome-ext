{
  "name": "time-turner-chrome-ext",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "watch": "vite build --watch",
    "serve:chrome": "vite build && web-ext run -t chromium --source-dir=dist",
    "build:extension": "vite build && cd dist && zip -r ../time-turner.zip ."
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "lucide-react": "latest"
  },
  "devDependencies": {
    "@types/chrome": "latest",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@crxjs/vite-plugin": "^2.0.0-beta.18",
    "autoprefixer": "latest",
    "postcss": "latest",
    "tailwindcss": "latest",
    "typescript": "latest",
    "vite": "^4.5.1",
    "web-ext": "^7.11.0"
  }
}
